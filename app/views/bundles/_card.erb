<%= link_to bundle_path(bundle) do %>
  <div class="bundle-card blue-grey-text text-darken-4">
    <div class="card-body" style="background-image: url(<%= bundle.thumbnail.url %>);"></div>
    <span class="blue-grey-text text-darken-4 bold"><%= bundle.artist %> </span>
    <span class="blue-grey-text text-darken-4 italic"><%= bundle.title %></span>
    <span class="blue-grey-text text-darken-4">by</span>
    <%= link_to user_path(bundle.author.username) do %>
      <span class="teal-text text-lighten-1"><%= bundle.author.username %></span>
    <% end %>
  </div>
<% end %>
